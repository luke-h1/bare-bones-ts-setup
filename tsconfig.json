{
  "compilerOptions": {
    "composite": true,
    "target": "ES2018",                    
    "module": "commonjs",                     
    "declaration": true,                      
    "outDir": "dist",                        
    "rootDir": "src",                      
    "strict": true,                          
    "noUnusedLocals": true,                
    "noUnusedParameters": true,            
    "noImplicitReturns": true,             
    "stripInternal": true, 
    "types": [],                        
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src", "tsconfig.eslint.json"]
}
